[Unit]
Description=Crypto Position Manager API
After=network.target

[Service]
Type=exec
User=root
Group=root
WorkingDirectory=/var/www/crypto-manager/backend
Environment="PATH=/var/www/crypto-manager/backend/venv/bin"
ExecStart=/var/www/crypto-manager/backend/venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000 --workers 1
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
